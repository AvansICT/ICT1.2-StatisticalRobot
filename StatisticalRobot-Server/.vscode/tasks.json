{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "Build Only"
		},
		{
			"type": "shell",
			"label": "Build and Upload",
			"command": "Set-ExecutionPolicy",
			"args": [
                "Bypass",
                "-Scope",
                "Process;",
                ".\\.vscode\\build_deploy.ps1",
                "${workspaceFolderBasename}",
				"raspberrypi.local"
            ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
			"problemMatcher": []
		}
	]
}