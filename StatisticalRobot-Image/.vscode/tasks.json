{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build image using docker (Recommended)",
            "type": "shell",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "promptOnClose": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "./build-docker.sh"
            },
            "windows": {
                "command": "wsl -e ./build-docker.sh",
            }
        },
        {
            "label": "Build Image",
            "type": "shell",
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "promptOnClose": true,
            "linux": {
                "command": "sudo ./build.sh"
            },
            "windows": {
                "command": "wsl -e sudo ./build.sh"
            }
        }
    ]
}