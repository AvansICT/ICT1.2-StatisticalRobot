    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug on Pi",
            "type":"coreclr",
            "request": "launch",
            "program": "/opt/dotnet/dotnet",
            "args": [ "/mnt/csprojects/${workspaceFolderBasename}/RobotProject.dll" ],
            "cwd": "/mnt/csprojects/${workspaceFolderBasename}",
            "justMyCode": false,
            "stopAtEntry": false,
            "console": "internalConsole",
            "preLaunchTask": "Build and Deploy",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "ssh",
                "pipeArgs": [ "rompi@${command:avans-statisticalrobot.connectedRobotIpAddress}" ],
                "debuggerPath": "/opt/vsdbg/vsdbg"
            }
        }
    ]
}